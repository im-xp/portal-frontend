{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_SHARP_PATH": "/tmp/node_modules/sharp"
  },
  "rewrites": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "rippleonthe.nile" }],
      "destination": "/:path*?popup=ripple-on-the-nile"
    }
  ]
}
